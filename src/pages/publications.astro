---
import BaseLayout from '../layouts/BaseLayout.astro';
import MeshBackground from '../components/MeshBackground.jsx';

const publications = [
  {
    title: 'AI-Driven Enterprise Architecture: Integrating Machine Learning into TOGAF Frameworks',
    authors: ['Mehdi Bamou'],
    type: 'Research Paper',
    venue: 'Journal of Enterprise Architecture',
    year: '2024',
    status: 'Published',
    abstract: 'This paper explores the integration of artificial intelligence and machine learning capabilities within traditional enterprise architecture frameworks, specifically TOGAF. It examines how AI can enhance architecture decision-making, automate governance processes, and predict technology adoption patterns. Case studies from renewable energy and pharmaceutical sectors demonstrate practical implementation strategies.',
    tags: ['AI/ML', 'Enterprise Architecture', 'TOGAF', 'Digital Transformation', 'Automation'],
    downloadUrl: '#',
    image: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?w=800&h=400&fit=crop'
  },
  {
    title: 'Green Energy & ESG: Technology Architecture for Sustainable Digital Transformation',
    authors: ['Mehdi Bamou'],
    type: 'White Paper',
    venue: 'Industry Publication',
    year: '2024',
    status: 'Published',
    abstract: 'A comprehensive examination of how enterprise architecture can drive Environmental, Social, and Governance (ESG) objectives through technology strategy. This white paper presents frameworks for integrating sustainability metrics into architecture governance, designing energy-efficient cloud infrastructures, and leveraging IoT and AI for renewable energy optimization. Real-world examples from Virtual Power Plant implementations illustrate measurable ESG outcomes.',
    tags: ['Green Energy', 'ESG', 'Sustainability', 'Cloud Architecture', 'IoT', 'Renewable Energy'],
    downloadUrl: '#',
    image: 'https://images.unsplash.com/photo-1473341304170-971dccb5ac1e?w=800&h=400&fit=crop'
  },
  {
    title: 'Cross-Cultural Digital Transformation: Bridging Technology Adoption Between Europe and MENA',
    authors: ['Mehdi Bamou'],
    type: 'Research Paper',
    venue: 'International Journal of Digital Innovation',
    year: '2023',
    status: 'Published',
    abstract: 'This research investigates the unique challenges and opportunities in implementing digital transformation initiatives across culturally diverse regions, specifically comparing European and MENA markets. The paper analyzes regulatory frameworks, organizational culture, technology infrastructure, and stakeholder engagement patterns. It proposes an adapted TOGAF methodology that accounts for cultural context, regulatory diversity, and market maturity levels.',
    tags: ['Digital Transformation', 'Cross-Cultural', 'MENA', 'Enterprise Architecture', 'Change Management'],
    downloadUrl: '#',
    image: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=800&h=400&fit=crop'
  },
];

