---
import BaseLayout from '../layouts/BaseLayout.astro';

const categories = [
  { name: 'All', count: 45 },
  { name: 'Professional Photos', count: 12 },
  { name: 'Event Gallery', count: 18 },
  { name: 'Presentations', count: 10 },
  { name: 'Videos', count: 5 },
];

// Placeholder data - replace with actual media
const mediaItems = [
  {
    type: 'photo',
    category: 'Professional Photos',
    title: 'Professional Headshot 2024',
    description: 'High-resolution professional photo for press and events',
    date: '2024-01',
    thumbnail: '/media/placeholder.jpg',
    downloads: ['High Res (300dpi)', 'Web (72dpi)', 'Square (1:1)']
  },
  {
    type: 'event',
    category: 'Event Gallery',
    title: 'TechConf Europe 2024',
    description: 'Speaking at TechConf Europe in Berlin',
    date: '2024-03',
    thumbnail: '/media/placeholder.jpg',
    count: 8
  },
  {
    type: 'presentation',
    category: 'Presentations',
    title: 'TOGAF Implementation Workshop',
    description: 'Practical guide to adopting TOGAF in mid-size organizations',
    date: '2024-02',
    thumbnail: '/media/placeholder.jpg',
    downloads: ['PDF', 'PowerPoint', 'Keynote']
  },
  {
    type: 'video',
    category: 'Videos',
    title: 'Enterprise Architecture Fundamentals',
    description: 'Introduction to EA principles and practices',
    date: '2023-11',
    thumbnail: '/media/placeholder.jpg',
    duration: '45:30'
  },
];
---

<BaseLayout 
  title="Media Library - Mehdi Bamou"
  description="Professional photos, event galleries, presentations, and video archive. Download high-resolution media assets for press, events, and publications."
  path="/media"
>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24 bg-gradient-to-br from-slate-900 to-slate-800 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 right-10 w-64 h-64 border border-white rounded-full"></div>
      <div class="absolute bottom-10 left-10 w-48 h-48 border border-secondary transform rotate-45"></div>
    </div>

    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <div class="inline-block px-4 py-2 bg-white/20 rounded-full mb-4">
          <span class="text-sm font-medium">Médiathèque</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6 leading-tight">
          Media Library
        </h1>
        
        <p class="text-xl md:text-2xl mb-6 leading-relaxed opacity-95">
          Professional photos, event documentation, presentations, and video archive
        </p>
        
        <p class="text-base opacity-90">
          High-resolution media assets available for download. All photos and materials are available for press, events, and publications with proper attribution.
        </p>
      </div>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="py-8 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 sticky top-16 z-40">
    <div class="container-custom">
      <div class="flex flex-wrap gap-3">
        {categories.map((category, index) => (
          <button
            class={`px-4 py-2 rounded-lg text-sm font-medium transition-colors ${
              index === 0
                ? 'bg-primary text-white'
                : 'bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 hover:bg-primary hover:text-white dark:hover:bg-primary'
            }`}
          >
            {category.name}
            <span class="ml-2 opacity-75">({category.count})</span>
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Media Grid -->
  <section class="section-spacing">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {mediaItems.map((item) => (
          <div class="card group hover:shadow-xl transition-all hover:-translate-y-1">
            {/* Thumbnail */}
            <div class="relative aspect-video bg-slate-200 dark:bg-slate-700 rounded-lg mb-4 overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                {item.type === 'photo' && (
                  <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                )}
                {item.type === 'event' && (
                  <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                )}
                {item.type === 'presentation' && (
                  <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                )}
                {item.type === 'video' && (
                  <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
              </div>
              
              {/* Overlay on hover */}
              <div class="absolute inset-0 bg-primary/90 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <button class="px-4 py-2 bg-white text-primary rounded-lg font-semibold">
                  View
                </button>
              </div>

              {/* Type badge */}
              <div class="absolute top-2 right-2 px-2 py-1 bg-black/50 text-white text-xs rounded">
                {item.type.toUpperCase()}
              </div>

              {/* Additional info */}
              {item.count && (
                <div class="absolute bottom-2 left-2 px-2 py-1 bg-black/50 text-white text-xs rounded">
                  {item.count} photos
                </div>
              )}
              {item.duration && (
                <div class="absolute bottom-2 right-2 px-2 py-1 bg-black/50 text-white text-xs rounded">
                  {item.duration}
                </div>
              )}
            </div>

            {/* Info */}
            <div>
              <div class="flex items-center justify-between mb-2">
                <span class="text-xs text-primary dark:text-primary-400 font-semibold">
                  {item.category}
                </span>
                <span class="text-xs text-slate-500 dark:text-slate-400">
                  {item.date}
                </span>
              </div>
              
              <h3 class="text-lg font-heading font-bold mb-2 text-slate-900 dark:text-white">
                {item.title}
              </h3>
              
              <p class="text-sm text-slate-600 dark:text-slate-300 mb-3">
                {item.description}
              </p>

              {/* Download options */}
              {item.downloads && (
                <div class="flex flex-wrap gap-2">
                  {item.downloads.map((format) => (
                    <button class="text-xs px-3 py-1 bg-slate-100 dark:bg-slate-800 hover:bg-primary hover:text-white dark:hover:bg-primary text-slate-700 dark:text-slate-300 rounded transition-colors">
                      ↓ {format}
                    </button>
                  ))}
                </div>
              )}
            </div>
          </div>
        ))}
      </div>

      {/* Empty state message */}
      <div class="mt-12 text-center p-12 bg-slate-50 dark:bg-slate-800 rounded-lg">
        <div class="w-16 h-16 mx-auto mb-4 text-slate-400 dark:text-slate-600">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-heading font-bold mb-2 text-slate-900 dark:text-white">
          Media Library Coming Soon
        </h3>
        <p class="text-slate-600 dark:text-slate-400 max-w-md mx-auto">
          Professional photos, event galleries, and presentation materials will be added here. 
          Check back soon or contact me for specific media requests.
        </p>
      </div>
    </div>
  </section>

  <!-- Usage Guidelines -->
  <section class="section-spacing bg-slate-50 dark:bg-slate-800">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-heading font-bold mb-6 text-slate-900 dark:text-white">
          Usage Guidelines
        </h2>
        
        <div class="prose prose-slate dark:prose-invert max-w-none">
          <p class="text-slate-600 dark:text-slate-300">
            All media assets in this library are available for use with proper attribution. 
            Please follow these guidelines:
          </p>
          
          <ul class="space-y-2 text-slate-600 dark:text-slate-300">
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span><strong>Attribution:</strong> Credit as "Mehdi Bamou" or "Photo courtesy of Mehdi Bamou"</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span><strong>Allowed:</strong> Press, publications, event promotion, educational use</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span><strong>Modifications:</strong> Cropping and color correction allowed, no alterations that misrepresent</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
              <span><strong>Not Allowed:</strong> Commercial use without permission, redistribution, endorsements</span>
            </li>
          </ul>

          <p class="text-slate-600 dark:text-slate-300 mt-6">
            For specific requests or questions about media usage, please <a href="mailto:mehdi.bamou@example.com" class="text-primary hover:underline">contact me</a>.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
