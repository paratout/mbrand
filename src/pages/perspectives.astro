---
import BaseLayout from '../layouts/BaseLayout.astro';
import MeshBackground from '../components/MeshBackground.jsx';

const articles = [
  {
    title: 'AI in Enterprise Architecture: Beyond the Hype',
    description: 'Exploring practical applications of AI and machine learning in enterprise architecture, from automated governance to predictive analytics',
    date: 'October 10, 2024',
    slug: '/perspectives/ai-enterprise-architecture',
    image: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?w=800&h=400&fit=crop',
    category: 'AI & Machine Learning',
    readTime: '8 min read'
  },
  {
    title: 'ESG Metrics in Digital Transformation',
    description: 'How to integrate sustainability metrics into your technology strategy and measure environmental impact',
    date: 'Coming Soon',
    slug: '#',
    image: 'https://images.unsplash.com/photo-1473341304170-971dccb5ac1e?w=800&h=400&fit=crop',
    category: 'Green Energy & ESG',
    readTime: '10 min read'
  },
  {
    title: 'TOGAF Implementation Best Practices',
    description: 'Practical lessons from implementing TOGAF in mid-size organizations across Europe',
    date: 'Coming Soon',
    slug: '#',
    image: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=800&h=400&fit=crop',
    category: 'Enterprise Architecture',
    readTime: '12 min read'
  },
  {
    title: 'Cross-Cultural Technology Adoption',
    description: 'Bridging technology innovation between Europe and MENA markets',
    date: 'Coming Soon',
    slug: '#',
    image: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=800&h=400&fit=crop',
    category: 'Digital Transformation',
    readTime: '9 min read'
  },
];

const categories = [
  { name: 'All', slug: 'all' },
  { name: 'AI & Machine Learning', slug: 'ai' },
  { name: 'Green Energy & ESG', slug: 'green-energy' },
  { name: 'Enterprise Architecture', slug: 'enterprise-architecture' },
  { name: 'Digital Transformation', slug: 'digital-transformation' },
];
---

<BaseLayout 
  title="Perspectives - Mehdi Bamou"
  description="Insights on enterprise architecture, digital transformation, TOGAF implementation, and Morocco's digital future. Exploring technology trends across Europe and MENA."
  path="/perspectives"
>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24 bg-white dark:bg-slate-900 text-slate-900 dark:text-white overflow-hidden">
    <MeshBackground variant="purple" client:load />

    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <div class="inline-block px-4 py-2 bg-white/20 dark:bg-white/10 rounded-full mb-4">
          <span class="text-sm font-medium">Thoughts & Insights</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6 leading-tight">
          Perspectives
        </h1>
        
        <p class="text-xl md:text-2xl mb-6 leading-relaxed opacity-95">
          Exploring enterprise architecture, digital transformation, and technology adoption across Europe and MENA
        </p>
        
        <p class="text-base opacity-90">
          Sharing knowledge, insights, and lessons learned from working at the intersection of technology and culture
        </p>
      </div>
    </div>
  </section>

  <!-- Categories Filter -->
  <section class="py-8 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 sticky top-16 z-40">
    <div class="container-custom">
      <div class="flex flex-wrap gap-3">
        {categories.map((category) => (
          <button
            class="px-4 py-2 rounded-lg text-sm font-medium transition-colors
                   bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300
                   hover:bg-primary hover:text-white dark:hover:bg-primary
                   first:bg-primary first:text-white"
          >
            {category.name}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="section-spacing">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 gap-8">
        {articles.map((article) => (
          <a href={article.slug} class="card hover:shadow-xl transition-all hover:-translate-y-1 group block">
            <div class="mb-4 overflow-hidden rounded-lg">
              <img 
                src={article.image} 
                alt={article.title}
                class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="mb-3">
              <span class="px-3 py-1 bg-primary/10 dark:bg-primary/20 text-primary dark:text-primary-400 text-sm font-medium rounded-full">
                {article.category}
              </span>
            </div>
            <h3 class="text-2xl font-heading font-bold mb-3 text-slate-900 dark:text-white group-hover:text-primary transition-colors">
              {article.title}
            </h3>
            <p class="text-slate-600 dark:text-slate-300 mb-4">
              {article.description}
            </p>
            <div class="flex items-center gap-4 text-sm text-slate-500 dark:text-slate-400">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {article.date}
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {article.readTime}
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Topics of Interest -->
  <section class="section-spacing bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/30 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-slate-900 dark:text-white">
          Topics I Write About
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300">
          Exploring the intersection of technology, strategy, and sustainable innovation
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto">
        <span class="px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-full text-lg font-semibold shadow-lg hover:shadow-xl hover:scale-105 transition-all cursor-pointer">
          ü§ñ AI & Machine Learning
        </span>
        <span class="px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-full text-lg font-semibold shadow-lg hover:shadow-xl hover:scale-105 transition-all cursor-pointer">
          üå± Green Energy & ESG
        </span>
        <span class="px-5 py-2.5 bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-full font-medium shadow-md hover:shadow-lg hover:scale-105 transition-all cursor-pointer">
          üèóÔ∏è Enterprise Architecture
        </span>
        <span class="px-5 py-2.5 bg-gradient-to-r from-indigo-500 to-indigo-600 text-white rounded-full font-medium shadow-md hover:shadow-lg hover:scale-105 transition-all cursor-pointer">
          üìã TOGAF & Frameworks
        </span>
        <span class="px-5 py-2.5 bg-gradient-to-r from-cyan-500 to-cyan-600 text-white rounded-full font-medium shadow-md hover:shadow-lg hover:scale-105 transition-all cursor-pointer">
          ‚òÅÔ∏è Cloud Architecture
        </span>
        <span class="px-5 py-2.5 bg-gradient-to-r from-pink-500 to-pink-600 text-white rounded-full font-medium shadow-md hover:shadow-lg hover:scale-105 transition-all cursor-pointer">
          ‚ö° Digital Transformation
        </span>
        <span class="px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-full text-sm font-medium shadow hover:shadow-md hover:scale-105 transition-all cursor-pointer">
          üåç Cross-Cultural Tech
        </span>
        <span class="px-4 py-2 bg-gradient-to-r from-teal-500 to-teal-600 text-white rounded-full text-sm font-medium shadow hover:shadow-md hover:scale-105 transition-all cursor-pointer">
          üîê Security & Compliance
        </span>
        <span class="px-4 py-2 bg-gradient-to-r from-rose-500 to-rose-600 text-white rounded-full text-sm font-medium shadow hover:shadow-md hover:scale-105 transition-all cursor-pointer">
          üìä Data Architecture
        </span>
        <span class="px-4 py-2 bg-gradient-to-r from-violet-500 to-violet-600 text-white rounded-full text-sm font-medium shadow hover:shadow-md hover:scale-105 transition-all cursor-pointer">
          üöÄ Innovation Strategy
        </span>
      </div>
    </div>
  </section>

  <!-- Newsletter CTA (Optional) -->
  <section class="section-spacing border-t border-slate-200 dark:border-slate-700">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-heading font-bold mb-4 text-slate-900 dark:text-white">
          Stay Updated
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
          Get notified when I publish new articles on enterprise architecture and digital transformation
        </p>
        <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
          <input
            type="email"
            placeholder="your@email.com"
            class="flex-1 px-4 py-3 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <button class="px-6 py-3 bg-primary hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors">
            Subscribe
          </button>
        </div>
        <p class="text-xs text-slate-500 dark:text-slate-400 mt-3">
          No spam, unsubscribe anytime
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
