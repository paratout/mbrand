---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticlePreview from '../components/ArticlePreview.jsx';
import MeshBackground from '../components/MeshBackground.jsx';

const blogPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort by date, newest first
const sortedPosts = blogPosts.sort((a, b) => 
  b.data.date.valueOf() - a.data.date.valueOf()
);

const categories = [
  { name: 'All', slug: 'all' },
  { name: 'Morocco Digital 2030', slug: 'morocco' },
  { name: 'Enterprise Architecture', slug: 'enterprise-architecture' },
  { name: 'TOGAF', slug: 'togaf' },
  { name: 'Cloud Architecture', slug: 'cloud' },
  { name: 'Digital Transformation', slug: 'digital-transformation' },
];
---

<BaseLayout 
  title="Perspectives - Mehdi Bamou"
  description="Insights on enterprise architecture, digital transformation, TOGAF implementation, and Morocco's digital future. Exploring technology trends across Europe and MENA."
  path="/perspectives"
>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24 bg-white dark:bg-slate-900 text-slate-900 dark:text-white overflow-hidden">
    <MeshBackground variant="purple" client:load />

    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <div class="inline-block px-4 py-2 bg-white/20 dark:bg-white/10 rounded-full mb-4">
          <span class="text-sm font-medium">Thoughts & Insights</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6 leading-tight">
          Perspectives
        </h1>
        
        <p class="text-xl md:text-2xl mb-6 leading-relaxed opacity-95">
          Exploring enterprise architecture, digital transformation, and technology adoption across Europe and MENA
        </p>
        
        <p class="text-base opacity-90">
          Sharing knowledge, insights, and lessons learned from working at the intersection of technology and culture
        </p>
      </div>
    </div>
  </section>

  <!-- Categories Filter -->
  <section class="py-8 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 sticky top-16 z-40">
    <div class="container-custom">
      <div class="flex flex-wrap gap-3">
        {categories.map((category) => (
          <button
            class="px-4 py-2 rounded-lg text-sm font-medium transition-colors
                   bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300
                   hover:bg-primary hover:text-white dark:hover:bg-primary
                   first:bg-primary first:text-white"
          >
            {category.name}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="section-spacing">
    <div class="container-custom">
      {sortedPosts.length === 0 ? (
        <div class="text-center py-16">
          <div class="w-16 h-16 mx-auto mb-4 text-slate-400 dark:text-slate-600">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold mb-2 text-slate-900 dark:text-white">
            No articles yet
          </h3>
          <p class="text-slate-600 dark:text-slate-400">
            Check back soon for insights on enterprise architecture and digital transformation
          </p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <ArticlePreview
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              slug={`/blog/${post.slug}`}
              image={post.data.image}
              tags={post.data.tags}
              client:load
            />
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Topics of Interest -->
  <section class="section-spacing bg-slate-50 dark:bg-slate-800">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-8 text-slate-900 dark:text-white text-center">
        Topics I Write About
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <div class="card">
          <div class="flex items-start gap-3">
            <div class="p-2 bg-primary/10 dark:bg-primary/20 rounded-lg">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-heading font-bold mb-1 text-slate-900 dark:text-white">Morocco Digital 2030</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300">Analysis of Morocco's digital transformation strategy</p>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-start gap-3">
            <div class="p-2 bg-secondary/10 dark:bg-secondary/20 rounded-lg">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <h3 class="font-heading font-bold mb-1 text-slate-900 dark:text-white">Enterprise Architecture</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300">Patterns, frameworks, and best practices</p>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-start gap-3">
            <div class="p-2 bg-primary/10 dark:bg-primary/20 rounded-lg">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <div>
              <h3 class="font-heading font-bold mb-1 text-slate-900 dark:text-white">TOGAF Implementation</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300">Practical guides for adopting TOGAF</p>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-start gap-3">
            <div class="p-2 bg-secondary/10 dark:bg-secondary/20 rounded-lg">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
              </svg>
            </div>
            <div>
              <h3 class="font-heading font-bold mb-1 text-slate-900 dark:text-white">Cloud Architecture</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300">Migration strategies and design patterns</p>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-start gap-3">
            <div class="p-2 bg-primary/10 dark:bg-primary/20 rounded-lg">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-heading font-bold mb-1 text-slate-900 dark:text-white">Digital Transformation</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300">Strategies for organizational change</p>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="flex items-start gap-3">
            <div class="p-2 bg-secondary/10 dark:bg-secondary/20 rounded-lg">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-heading font-bold mb-1 text-slate-900 dark:text-white">Cross-Cultural Tech</h3>
              <p class="text-sm text-slate-600 dark:text-slate-300">Europe-MENA technology exchange</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter CTA (Optional) -->
  <section class="section-spacing border-t border-slate-200 dark:border-slate-700">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-heading font-bold mb-4 text-slate-900 dark:text-white">
          Stay Updated
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
          Get notified when I publish new articles on enterprise architecture and digital transformation
        </p>
        <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
          <input
            type="email"
            placeholder="your@email.com"
            class="flex-1 px-4 py-3 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <button class="px-6 py-3 bg-primary hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors">
            Subscribe
          </button>
        </div>
        <p class="text-xs text-slate-500 dark:text-slate-400 mt-3">
          No spam, unsubscribe anytime
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
