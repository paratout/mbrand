---
import BaseLayout from '../layouts/BaseLayout.astro';
import MeshBackground from '../components/MeshBackground.jsx';

const projects = [
  {
    title: 'Virtual Power Plant (VPP) - Strategic Energy Transformation',
    description: 'Orchestrated enterprise-wide strategic planning and deployment of Virtual Power Plant infrastructure, aligning technology roadmap with corporate sustainability vision and market positioning',
    year: '2022-2024',
    technologies: ['IoT Architecture', 'AI/ML Optimization', 'AWS Cloud', 'Kubernetes', 'Real-time Analytics', 'Stakeholder Management'],
    outcomes: ['25% improvement in system efficiency', 'Real-time energy optimization at scale', 'Stakeholder alignment across industry standards', 'Sustainable energy future enablement'],
    category: 'Strategic Architecture & Digital Transformation'
  },
  {
    title: 'Industrial Hazard Management System - Pharmaceutical Compliance',
    description: 'Led enterprise architecture initiative for Merck Darmstadt, designing integrated safety infrastructure that bridges CAD systems, fire protection, and hazard management while ensuring pharmaceutical industry compliance',
    year: '2021-2024',
    technologies: ['WinGuard Enterprise', 'FS20 Integration', 'CAD Systems', 'Security Architecture', 'Compliance Frameworks'],
    outcomes: ['Automated fire protection equipment lifecycle', 'Enhanced data security and authenticity', 'Regulatory compliance achievement', 'Process optimization across building lifecycle'],
    category: 'Enterprise Integration & Governance'
  },
  {
    title: 'SAP ERP Modernization - ArcelorMittal Europe',
    description: 'Architected cloud-based ERP integration strategy, modernizing legacy weigh-bridge systems with real-time SAP MM/SD modules, establishing foundation for digital transformation in manufacturing operations',
    year: '2015-2016',
    technologies: ['SAP PI/SOAP', 'SAP MM/SD', 'Cloud ERP', 'Legacy System Integration', 'Security Systems'],
    outcomes: ['Real-time operational reporting', 'Seamless cloud migration from legacy systems', 'Enhanced security and supervision', 'Foundation for future digital initiatives'],
    category: 'Enterprise Architecture & Cloud Migration'
  },
  {
    title: 'Microservices Transformation - Civilia Systems',
    description: 'Directed architectural transformation of monolithic enterprise applications into 40+ microservices, delivering scalable, maintainable architecture within budget constraints',
    year: '2019-2021',
    technologies: ['Microservices Architecture', 'Domain-Driven Design', 'Cloud-Native Patterns', 'Budget Management'],
    outcomes: ['40+ microservices deployed', '32Kâ‚¬ budget optimization', 'Enhanced system scalability', 'Improved maintainability and agility'],
    category: 'Architecture Modernization'
  },
  {
    title: 'Digital Publishing Platform - Windwalker Media',
    description: 'Provided technical leadership for cloud-based publishing infrastructure, overseeing development teams, CI/CD implementation, and multi-platform service delivery',
    year: '2017-2019',
    technologies: ['AWS', 'PHP/Laravel', 'Angular', 'CI/CD Pipeline', 'Database Optimization', 'Team Leadership'],
    outcomes: ['Scalable cloud infrastructure', 'Automated deployment pipelines', 'Cross-functional team coordination', 'Platform reliability and performance'],
    category: 'Technical Leadership & Cloud Operations'
  },
];

// Open-source contributions - placeholder for future projects
const openSource = [
  // Projects will be added as they are published
];

const expertise = [
  { name: 'Strategic Architecture & TOGAF', level: 95 },
  { name: 'Digital Transformation Leadership', level: 95 },
  { name: 'Stakeholder Management & Governance', level: 90 },
  { name: 'Cloud Strategy & Migration (AWS)', level: 85 },
  { name: 'Enterprise Integration & SAP', level: 85 },
  { name: 'Technology Roadmap & Vision', level: 90 },
];
---

<BaseLayout 
  title="Portfolio - Mehdi Bamou | Enterprise Architecture Leadership"
  description="Strategic enterprise architecture initiatives across renewable energy, pharmaceuticals, and manufacturing. Driving digital transformation, cloud migration, and technology governance."
  path="/portfolio"
>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24 bg-white dark:bg-slate-900 text-slate-900 dark:text-white overflow-hidden">
    <MeshBackground variant="secondary" client:load />

    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <div class="inline-block px-4 py-2 bg-white/20 rounded-full mb-4">
          <span class="text-sm font-medium">Strategic Architecture Leadership</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6 leading-tight">
          Portfolio
        </h1>
        
        <p class="text-xl md:text-2xl mb-6 leading-relaxed opacity-95">
          Leading enterprise-wide digital transformation initiatives across renewable energy, pharmaceuticals, and manufacturing sectors
        </p>
        
        <p class="text-base opacity-90">
          Strategic architecture, stakeholder alignment, and technology governance delivering measurable business outcomes
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="section-spacing">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-12 text-slate-900 dark:text-white">
        Featured Projects
      </h2>
      
      <div class="space-y-8">
        {projects.map((project) => (
          <div class="card hover:shadow-xl transition-shadow">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <h3 class="text-2xl font-heading font-bold text-slate-900 dark:text-white">
                    {project.title}
                  </h3>
                  <span class="px-3 py-1 bg-primary/10 dark:bg-primary/20 text-primary dark:text-primary-400 text-sm font-medium rounded-full">
                    {project.category}
                  </span>
                </div>
                <p class="text-slate-600 dark:text-slate-300 mb-4">
                  {project.description}
                </p>
              </div>
              <div class="text-sm text-slate-500 dark:text-slate-400 font-medium">
                {project.year}
              </div>
            </div>

            <div class="mb-4">
              <h4 class="text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Technologies:</h4>
              <div class="flex flex-wrap gap-2">
                {project.technologies.map((tech) => (
                  <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-sm rounded-lg">
                    {tech}
                  </span>
                ))}
              </div>
            </div>

            <div>
              <h4 class="text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Key Outcomes:</h4>
              <ul class="space-y-1">
                {project.outcomes.map((outcome) => (
                  <li class="flex items-start gap-2 text-sm text-slate-600 dark:text-slate-400">
                    <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {outcome}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Open Source Contributions -->
  <section class="section-spacing bg-slate-50 dark:bg-slate-800">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-slate-900 dark:text-white">
          Open Source
        </h2>
        <a 
          href="https://github.com/mehdibamou" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-primary dark:text-primary-400 hover:underline font-medium"
        >
          View on GitHub
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        {openSource.map((repo) => (
          <a 
            href={repo.link}
            target="_blank"
            rel="noopener noreferrer"
            class="card hover:shadow-xl transition-all hover:-translate-y-1 group"
          >
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-xl font-heading font-bold text-slate-900 dark:text-white group-hover:text-primary transition-colors">
                {repo.name}
              </h3>
              <div class="flex items-center gap-1 text-sm text-slate-500 dark:text-slate-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                {repo.stars}
              </div>
            </div>
            <p class="text-sm text-slate-600 dark:text-slate-300 mb-3">
              {repo.description}
            </p>
            <div class="flex items-center gap-2">
              <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
              <span class="text-sm text-slate-500 dark:text-slate-400">{repo.language}</span>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-8 text-center">
        <p class="text-slate-600 dark:text-slate-300 mb-4">
          More projects and contributions available on GitHub
        </p>
        <a 
          href="https://github.com/mehdibamou"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-slate-800 hover:bg-slate-700 dark:bg-slate-700 dark:hover:bg-slate-600 text-white rounded-lg font-medium transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View All Repositories
        </a>
      </div>
    </div>
  </section>

  <!-- Technical Expertise -->
  <section class="section-spacing">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-12 text-slate-900 dark:text-white text-center">
        Technical Expertise
      </h2>
      
      <div class="max-w-3xl mx-auto space-y-6">
        {expertise.map((skill) => (
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="font-medium text-slate-900 dark:text-white">{skill.name}</span>
              <span class="text-sm text-slate-500 dark:text-slate-400">{skill.level}%</span>
            </div>
            <div class="h-3 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
              <div 
                class="h-full bg-gradient-to-r from-primary to-secondary rounded-full transition-all duration-1000"
                style={`width: ${skill.level}%`}
              ></div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 text-center">
        <p class="text-slate-600 dark:text-slate-300 mb-6">
          Interested in collaboration or have questions about these projects?
        </p>
        <a 
          href="/about"
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors"
        >
          Learn More About My Work
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
