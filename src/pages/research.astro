---
import BaseLayout from '../layouts/BaseLayout.astro';
import MeshBackground from '../components/MeshBackground.jsx';

const publications = [
  {
    title: 'Adapting Enterprise Architecture Frameworks for MENA Markets',
    authors: ['Mehdi Bamou', 'Co-Author Name'],
    type: 'Research Paper',
    venue: 'Journal of Enterprise Architecture',
    year: '2023',
    status: 'Published',
    abstract: 'This paper explores how traditional EA frameworks like TOGAF can be adapted for emerging markets in the MENA region, considering cultural, regulatory, and technological contexts.',
    tags: ['Enterprise Architecture', 'TOGAF', 'MENA', 'Digital Transformation'],
    links: [
      { type: 'PDF', url: '#' },
      { type: 'DOI', url: '#' },
      { type: 'Citation', url: '#' }
    ]
  },
  {
    title: 'Cloud Migration Patterns for Legacy Enterprise Systems',
    authors: ['Mehdi Bamou'],
    type: 'White Paper',
    venue: 'Self-Published',
    year: '2023',
    status: 'Published',
    abstract: 'A comprehensive guide to cloud migration strategies, focusing on practical patterns for migrating legacy enterprise systems with minimal disruption.',
    tags: ['Cloud Architecture', 'Migration', 'AWS', 'Azure'],
    links: [
      { type: 'PDF', url: '#' },
      { type: 'Download', url: '#' }
    ]
  },
  {
    title: 'Cross-Cultural Technology Adoption: Europe-MENA Case Studies',
    authors: ['Mehdi Bamou'],
    type: 'Working Paper',
    venue: 'In Progress',
    year: '2024',
    status: 'In Progress',
    abstract: 'Examining how technology adoption patterns differ between European and MENA markets, with case studies from digital transformation initiatives.',
    tags: ['Digital Transformation', 'Cross-Cultural', 'Case Studies'],
    links: []
  }
];

const topics = [
  {
    title: 'Enterprise Architecture Governance',
    description: 'Frameworks, best practices, and organizational structures for effective EA governance',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'
  },
  {
    title: 'Digital Transformation Frameworks',
    description: 'Methodologies and approaches for successful organizational digital transformation',
    icon: 'M13 10V3L4 14h7v7l9-11h-7z'
  },
  {
    title: 'Technology Adoption in Emerging Markets',
    description: 'Patterns, challenges, and success factors for tech adoption in developing economies',
    icon: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
  },
  {
    title: 'Cloud Architecture Patterns',
    description: 'Design patterns, anti-patterns, and best practices for cloud-native architectures',
    icon: 'M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z'
  },
  {
    title: 'Cross-Border Technology Transfer',
    description: 'Mechanisms and challenges of technology transfer between different markets',
    icon: 'M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4'
  },
  {
    title: 'TOGAF Implementation Strategies',
    description: 'Practical approaches to implementing TOGAF in various organizational contexts',
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4'
  }
];

const readingList = [
  {
    title: 'Enterprise Architecture as Strategy',
    authors: 'Jeanne W. Ross, Peter Weill, David C. Robertson',
    category: 'Enterprise Architecture',
    year: '2006'
  },
  {
    title: 'The Phoenix Project',
    authors: 'Gene Kim, Kevin Behr, George Spafford',
    category: 'DevOps & IT',
    year: '2013'
  },
  {
    title: 'Building Microservices',
    authors: 'Sam Newman',
    category: 'Software Architecture',
    year: '2021'
  },
  {
    title: 'The Innovator\'s Dilemma',
    authors: 'Clayton M. Christensen',
    category: 'Digital Transformation',
    year: '1997'
  }
];
---

<BaseLayout 
  title="Research & Publications - Mehdi Bamou"
  description="Research papers, white papers, and publications on enterprise architecture, digital transformation, and technology adoption. Topics of interest and recommended reading."
  path="/research"
>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24 bg-white dark:bg-slate-900 text-slate-900 dark:text-white overflow-hidden">
    <MeshBackground variant="success" client:load />

    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <div class="inline-block px-4 py-2 bg-white/20 rounded-full mb-4">
          <span class="text-sm font-medium">Academic & Professional Research</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6 leading-tight">
          Research & Publications
        </h1>
        
        <p class="text-xl md:text-2xl mb-6 leading-relaxed opacity-95">
          Exploring enterprise architecture, digital transformation, and technology adoption through research and analysis
        </p>
        
        <p class="text-base opacity-90">
          Contributing to the body of knowledge in enterprise architecture and sharing insights from cross-cultural technology work
        </p>
      </div>
    </div>
  </section>

  <!-- Publications -->
  <section class="section-spacing">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-12 text-slate-900 dark:text-white">
        Publications
      </h2>
      
      <div class="space-y-8">
        {publications.map((pub) => (
          <div class="card hover:shadow-xl transition-shadow">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3 flex-wrap">
                  <h3 class="text-2xl font-heading font-bold text-slate-900 dark:text-white">
                    {pub.title}
                  </h3>
                  <span class={`px-3 py-1 text-sm font-medium rounded-full ${
                    pub.status === 'Published' 
                      ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400'
                      : 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400'
                  }`}>
                    {pub.status}
                  </span>
                </div>
                
                <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">
                  <span class="font-medium">{pub.authors.join(', ')}</span>
                  <span class="mx-2">•</span>
                  <span>{pub.venue}</span>
                  <span class="mx-2">•</span>
                  <span>{pub.year}</span>
                </div>
                
                <p class="text-slate-600 dark:text-slate-300 mb-4 leading-relaxed">
                  {pub.abstract}
                </p>
              </div>
            </div>

            <div class="flex flex-wrap items-center justify-between gap-4">
              <div class="flex flex-wrap gap-2">
                {pub.tags.map((tag) => (
                  <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-sm rounded-lg">
                    {tag}
                  </span>
                ))}
              </div>
              
              {pub.links.length > 0 && (
                <div class="flex gap-2">
                  {pub.links.map((link) => (
                    <a 
                      href={link.url}
                      class="px-4 py-2 bg-primary hover:bg-primary-700 text-white text-sm font-medium rounded-lg transition-colors"
                    >
                      {link.type}
                    </a>
                  ))}
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Topics of Interest -->
  <section class="section-spacing bg-slate-50 dark:bg-slate-800">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-12 text-slate-900 dark:text-white text-center">
        Research Topics of Interest
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {topics.map((topic) => (
          <div class="card hover:shadow-xl transition-all hover:-translate-y-1">
            <div class="flex items-start gap-4">
              <div class="p-3 bg-primary/10 dark:bg-primary/20 rounded-lg flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={topic.icon} />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-heading font-bold mb-2 text-slate-900 dark:text-white">
                  {topic.title}
                </h3>
                <p class="text-sm text-slate-600 dark:text-slate-300">
                  {topic.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 text-center">
        <p class="text-slate-600 dark:text-slate-300 mb-6">
          Interested in collaboration on research projects?
        </p>
        <a 
          href="mailto:mehdi.bamou@example.com"
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- Reading List -->
  <section class="section-spacing">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-8 text-slate-900 dark:text-white">
        Recommended Reading
      </h2>
      
      <p class="text-lg text-slate-600 dark:text-slate-300 mb-8 max-w-3xl">
        Books and papers that have influenced my thinking on enterprise architecture, digital transformation, and technology leadership
      </p>
      
      <div class="grid md:grid-cols-2 gap-6">
        {readingList.map((book) => (
          <div class="card hover:shadow-lg transition-shadow">
            <div class="flex gap-4">
              <div class="w-16 h-24 bg-gradient-to-br from-primary to-primary-700 rounded flex-shrink-0 flex items-center justify-center">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-heading font-bold mb-1 text-slate-900 dark:text-white">
                  {book.title}
                </h3>
                <p class="text-sm text-slate-600 dark:text-slate-400 mb-2">
                  {book.authors}
                </p>
                <div class="flex items-center gap-2 text-xs">
                  <span class="px-2 py-1 bg-primary/10 dark:bg-primary/20 text-primary dark:text-primary-400 rounded">
                    {book.category}
                  </span>
                  <span class="text-slate-500 dark:text-slate-400">
                    {book.year}
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section-spacing bg-slate-50 dark:bg-slate-800">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-heading font-bold mb-4 text-slate-900 dark:text-white">
          Contribute to the Discussion
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
          Have thoughts on these topics? Interested in collaboration? Let's connect and share ideas.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/perspectives"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white dark:bg-slate-700 border-2 border-primary text-primary dark:text-primary-400 rounded-lg font-semibold hover:bg-primary hover:text-white dark:hover:bg-primary transition-colors"
          >
            Read My Perspectives
          </a>
          <a 
            href="mailto:mehdi.bamou@example.com"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors"
          >
            Contact Me
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
